---
---
[
    {% for post in site.posts %}
        {
            "title"    : "{{ post.title | escape }}",
            "url"      : "{{ site.baseurl }}{{ post.url }}",
            "content"  : "{{ post.content | truncatewords:15 | strip_html | strip_newlines | escape }}",
            "tags"     : "{{ post.tags | join: ', ' }}",
            "date"     : "{{ post.date }}"
        } {% unless forloop.last %},{% endunless %}
    {% endfor %}
]